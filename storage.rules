rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Rules for Profile Images
    match /profile_images/{userId}/{fileName} {
      // Anyone can read profile pictures
      allow read: if true;
      // Only the authenticated user can write their own picture
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024 // 2MB limit
                   && request.resource.contentType.matches('image/.*');
    }

    // Rules for Journal Images
    match /journal_images/{tripId}/{fileName} {
      // Allow read IF the user is a member of that trip
      allow read: if request.auth != null
                  && (exists(/databases/$(database)/documents/trips/$(tripId))
                      && (request.auth.uid == resource(/databases/$(database)/documents/trips/$(tripId)).data.userId || 
                          request.auth.uid in resource(/databases/$(database)/documents/trips/$(tripId)).data.collaborators));

      // Allow write (create) IF the user is a member of that trip
      // and the file is an image under 5MB
      allow create: if request.auth != null
                  && (exists(/databases/$(database)/documents/trips/$(tripId))
                      && (request.auth.uid == resource(/databases/$(database)/documents/trips/$(tripId)).data.userId || 
                          request.auth.uid in resource(/databases/$(database)/documents/trips/$(tripId)).data.collaborators))
                  && request.resource.size < 5 * 1024 * 1024
                  && request.resource.contentType.matches('image/.*');

      // Allow delete IF the user is a member of that trip
      allow delete: if request.auth != null
                  && (exists(/databases/$(database)/documents/trips/$(tripId))
                      && (request.auth.uid == resource(/databases/$(database)/documents/trips/$(tripId)).data.userId || 
                          request.auth.uid in resource(/databases/$(database)/documents/trips/$(tripId)).data.collaborators));
    }
  }
}